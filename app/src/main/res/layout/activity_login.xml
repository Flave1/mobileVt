<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:padding="25dp"
    android:orientation="vertical"
    android:background="@color/colorPrimaryDark"
    tools:context="com.vendtech.app.ui.activity.authentication.LoginActivity">
<ImageView
    android:layout_width="wrap_content"
    android:src="@drawable/logo_sm"
    android:layout_gravity="center"
    android:layout_height="wrap_content" />
    <TextView
        android:layout_width="wrap_content"
        android:textColor="@color/colorWhite"
        android:padding="@dimen/padding4"
        android:textStyle="bold"
        android:fontFamily="@font/medium"
        android:text="Please Sign In to continue."
        android:layout_height="wrap_content" />

    <!--Email layout-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="50dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:padding="@dimen/padding12"
            android:layout_marginTop="11dp"
            android:gravity="center"
            android:background="@drawable/boarder_lightprimary"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="@dimen/_15sdp"
                android:src="@drawable/mail"
                android:layout_height="@dimen/_15sdp" />
            <EditText
                android:layout_width="match_parent"
                android:background="@null"
                android:textColorHint="@color/colorWhite"
                android:textColor="@color/colorWhite"
                android:layout_marginLeft="@dimen/margin8"
                android:maxLines="1"
                android:singleLine="true"
                android:id="@+id/emailET"
                android:hint=""
                android:textSize="14sp"
                android:imeOptions="actionNext"
                android:fontFamily="@font/regular"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:background="@color/colorPrimaryDark"
            android:fontFamily="@font/regular"
            android:paddingLeft="@dimen/padding8"
            android:paddingRight="@dimen/padding8"
            android:text="Email Or Username"
            android:textAllCaps="true"
            android:textColor="@color/colorlightPrimary"
            android:textSize="14sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/_25dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:padding="@dimen/padding12"
            android:layout_marginTop="11dp"
            android:gravity="center"
            android:background="@drawable/boarder_lightprimary"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="@dimen/_15sdp"
                android:src="@drawable/lock"
                android:layout_height="@dimen/_15sdp" />
            <EditText
                android:layout_width="match_parent"
                android:background="@null"
                android:textColorHint="@color/colorWhite"
                android:textColor="@color/colorWhite"
                android:layout_marginLeft="@dimen/margin8"
                android:id="@+id/passwordET"
                android:hint=""
                android:maxLines="1"
                android:singleLine="true"
                android:imeOptions="actionDone"
                android:fontFamily="@font/regular"
                android:textSize="14sp"
                android:inputType="textPassword"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:text="Password"
            android:textColor="@color/colorlightPrimary"
            android:layout_marginLeft="30dp"
            android:paddingLeft="@dimen/padding8"
            android:textAllCaps="true"
            android:textSize="14sp"
            android:fontFamily="@font/regular"
            android:paddingRight="@dimen/padding8"
            android:background="@color/colorPrimaryDark"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:text="Forgot Password?"
        android:fontFamily="@font/medium"
        android:padding="@dimen/padding8"
        android:gravity="end"
        android:textSize="@dimen/_12sp"
        android:id="@+id/txtForgotPassword"
        android:textColor="@color/colorWhite"
        android:layout_height="wrap_content" />




    <CheckBox android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorWhite"
        app:buttonTint="@color/colorWhite"
        android:id="@+id/rememberMeCB"
        android:checked="true"
        android:textSize="@dimen/_12sp"
        android:fontFamily="@font/medium"
        android:text=" Remember me"/>

    <TextView
        android:layout_width="match_parent"
        android:text="Login"
        android:fontFamily="@font/medium"
        android:layout_marginLeft="@dimen/_25dp"
        android:textStyle="bold"
        android:layout_marginTop="40dp"
        android:id="@+id/txtLogin"
        android:layout_marginRight="@dimen/_25dp"
        android:textColor="@color/colorPrimaryDark"
        android:textAlignment="center"
        android:gravity="center"
        android:background="@drawable/corner_yello"
        android:padding="@dimen/padding16"
        android:textAllCaps="true"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:padding="@dimen/padding16"
        android:id="@+id/layoutSignUp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:textColor="@color/colorWhite"
            android:fontFamily="@font/medium"
            android:textSize="@dimen/_12sp"
            android:text="Do not have account?"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:textColor="@color/colorYellow"
            android:fontFamily="@font/medium"
            android:text=" SIGN UP"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>